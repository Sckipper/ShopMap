<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shopmappsecondbackground"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lista_cupmaraturi_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Lista de cumparaturi este goala."
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lista_cupmaraturi_listView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </ListView>

    <Button
        android:id="@+id/btn_genereaza_imagine"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_below="@+id/lista_cupmaraturi_listView"
        android:layout_marginLeft="62dp"
        android:background="@drawable/button_bg"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Vezi lista de cumparaturi pe harta"
        android:textColor="#d3f7ff" />

</RelativeLayout>
